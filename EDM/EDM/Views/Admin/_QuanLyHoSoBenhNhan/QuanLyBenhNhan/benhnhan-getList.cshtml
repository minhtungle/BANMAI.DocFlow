@using EDM_DB
@model Applications.QuanLyBenhNhan.Dtos.GetList_BenhNhan_Output_Dto

@{
    string tableName = "benhnhan";
    var columns = new[] {
       "Mã hồ sơ", "Họ tên", "Số điện thoại", "Địa chỉ", "Tiền sử bệnh", "Ngày tạo", "Ghi chú"
    };

    bool themMoi = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlybenhnhan-themmoi");
    bool xemChiTiet = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlybenhnhan-xemchitiet");
    bool xoaBo = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlybenhnhan-xoabo");
}

<div class="mb-2 toggle-vis-bar">
    Hiển thị:
    @Public.Helpers.HtmlHelper.RenderToggleLinks($"{tableName}-getList", columns)
</div>
<table class="table table-hover table-bordered table-sticky w-100" id="@tableName-getList" data-page-length="10">
    <thead class="nowrap" style="white-space: nowrap !important">
        <tr>
            <th class="text-center" data-orderable="false"></th>

            @foreach (var c in columns)
            {
                <th class="text-center">@c</th>
            }

            <th class="text-center w-5" intro-container="dulieu-tacvu" data-orderable="false">
                <div style="white-space: nowrap">
                    <div class="btn-group btn-group-sm dropstart">
                        <button type="button" title="Thao tác" class="btn btn-primary dropdown-toggle dropdown-toggle-split"
                                data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                                data-reference="parent">
                            <i class="bi bi-gear-fill"></i>
                        </button>
                        <div class="dropdown-menu me-2" style="border: 1px solid black;">
                            @{
                                if (themMoi)
                                {
                                    <a class="dropdown-item c-pointer"
                                       onclick="quanLyBenhNhan.benhNhan.displayModal_CRUD('create')">
                                        <i class="bi bi-plus-circle-fill"></i> Thêm mới
                                    </a>
                                }
                                if (xoaBo)
                                {
                                    <a class="dropdown-item c-pointer"
                                       onclick="quanLyBenhNhan.benhNhan.delete('multiple')">
                                        <i class="bi bi-trash3-fill"></i> Xóa bỏ
                                    </a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </th>
        </tr>
    </thead>
    <tfoot class="show-footer-above">
        <tr>
            <th class="text-center"><input class="form-check-input checkAll-@tableName-getList" type="checkbox" title="Chọn tất cả" /></th>

            @foreach (var c in columns)
            {
                <th><input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." /></th>
            }

            <th><input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." disabled /></th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var benhNhan in Model.BenhNhans)
        {
            <tr id="@benhNhan.BenhNhan.IdBenhNhan">
                <td class="text-center"><input class="form-check-input checkRow-@tableName-getList" type="checkbox" /></td>

                <td class="text-left c-pointer"
                    onclick="sys.copyTextFromElement(this)"
                    title="Click để sao chép"
                    data-copy="@benhNhan.BenhNhan.Stt.ToString()">
                    <a href="#"><i class="bi bi-copy"></i> @Public.Handle.TruncateString(maxLength: 10, input: benhNhan.BenhNhan.Stt.ToString())</a>
                </td>
                <td class="text-left">
                    @if (xemChiTiet)
                    {
                        <a class="c-pointer"
                           href="/QuanLyBenhNhan/xemChiTiet_BenhNhan?idBenhNhan=@benhNhan.BenhNhan.IdBenhNhan">
                            @benhNhan.BenhNhan.HoTen
                        </a>
                    }
                    else
                    {
                        @benhNhan.BenhNhan.HoTen
                    }
                </td>
                <td class="text-left">@benhNhan.BenhNhan.SoDienThoai</td>
                <td class="text-left">@benhNhan.BenhNhan.DiaChi</td>
                <td class="text-left">@benhNhan.BenhNhan.TienSuBenh</td>
                <td class="text-left">@Public.Helpers.DateHelper.DateToString(date: benhNhan.BenhNhan.NgayTao)</td>
                <td class="text-left">@benhNhan.BenhNhan.GhiChu</td>

                <td class="text-center">
                    <div style="white-space: nowrap">
                        <div class="btn-group btn-group-sm dropstart">
                            <button type="button" title="Thao tác" class="btn btn-primary dropdown-toggle dropdown-toggle-split"
                                    data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                                    data-reference="parent">
                                <i class="bi bi-gear-fill"></i>
                            </button>
                            <div class="dropdown-menu me-2" style="border: 1px solid black;">
                                @{
                                    if (xemChiTiet)
                                    {
                                        <a class="dropdown-item c-pointer"
                                           href="/QuanLyBenhNhan/xemChiTiet_BenhNhan?idBenhNhan=@benhNhan.BenhNhan.IdBenhNhan">
                                            <i class="bi bi-eye"></i> Xem chi tiết
                                        </a>
                                    }
                                    if (xoaBo)
                                    {
                                        <a class="dropdown-item c-pointer"
                                           onclick="quanLyBenhNhan.benhNhan.delete('single', '@benhNhan.BenhNhan.IdBenhNhan')">
                                            <i class="bi bi-trash3-fill"></i> Xóa bỏ
                                        </a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>