@using Public.Models
@model Applications.QuanLyNguoiDung.Dtos.Index_Output_Dto
@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Views/_Shared/Admin/admin.cshtml";
}
@section hTitle {}
@section hBreadcrumb {
    <li class="breadcrumb-item"><a href="~/Home/Index">Trang chủ</a></li>
    <li class="breadcrumb-item active" aria-current="page">Người dùng</li>
}
@section scripts {
    <script src="~/Content/Admin/_SystemSetting/QuanLyNguoiDung/quanlynguoidung.js"></script>
    <script src="~/Content/Auth/doiMatKhau.js"></script>
    <script>
        var ua = new UserAccount();
        ua.init();
    </script>
}
<section class="section" page-group="page-group-systemsetting" id="page-useraccount" data-aos="fade-up">
    <div class="card">
        <div class="card-body">
            <div class="btn-group btn-group-sm" role="group">
                <!--Thao tác-->
                <a class="btn btn-primary"><i class="bi bi-three-dots-vertical"></i></a>
                <div class="btn-group btn-group-sm dropdown">
                    <button type="button" title="Thao tác" class="btn btn-primary dropdown-toggle dropdown-toggle-split"
                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                            data-reference="parent">
                        Thao tác
                    </button>
                    <div class="dropdown-menu">
                        @{
                            bool themMoi = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlynguoidung-themmoi");
                            bool capNhat_Multiple = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlynguoidung-capnhat");
                            bool xoaBo_Multiple = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlynguoidung-xoabo");
                            if (themMoi)
                            {
                                <a class="dropdown-item c-pointer"
                                   onclick="ua.nguoiDung.displayModal_CRUD('create')">
                                    <i class="bi bi-plus-circle-fill"></i> Thêm mới
                                </a>
                            }
                            if (capNhat_Multiple)
                            {
                                <a class="dropdown-item c-pointer"
                                   onclick="ua.nguoiDung.displayModal_CRUD('update')">
                                    <i class="bi bi-pencil-square"></i> Cập nhật
                                </a>
                            }
                            if (xoaBo_Multiple)
                            {
                                <a class="dropdown-item c-pointer"
                                   onclick="ua.nguoiDung.displayModal_Delete('multiple')">
                                    <i class="bi bi-trash3-fill"></i> Xóa bỏ
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body" id="useraccount-getList-container"></div>
    </div>
</section>
<!--useraccount-crud-->
<div class="modal fade text-left" id="useraccount-crud" tabindex="-1" data-bs-keyboard="false" data-bs-backdrop="static" removeBody="true">
</div>
<!--useraccount-delete-->
<div class="modal fade text-left" id="useraccount-delete" tabindex="-1" data-bs-keyboard="false" data-bs-backdrop="static" removeBody="true">
</div>
<!--useraccount-excel.nguoidung-->
@Html.Partial("~/Views/Admin/_SystemSetting/UserAccount/useraccount-excel.nguoidung/excel.nguoidung.cshtml")