@using Public.Models
@model Applications.QuanLyBaiDang.Dtos.XemChiTiet_Output_Dto
@{
    ViewBag.Title = "Quản lý bài đăng";
    Layout = "~/Views/_Shared/Admin/admin.cshtml";
}
@section hTitle {}
@section hBreadcrumb {
    <li class="breadcrumb-item"><a href="~/Home/Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a href="~/Home/Index">Quản lý bài đăng</a></li>
    <li class="breadcrumb-item active" aria-current="page">Xem chi tiết</li>
}
@section styles {
    <link href="~/Content/Admin/QuanLyBaiDang/quanlybaidang.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/Content/Admin/QuanLyBaiDang/quanlybaidang.js"></script>
    <script>
        var quanLyBaiDang = new QuanLyBaiDang();
        quanLyBaiDang.init();
    </script>
}
<section class="section" page-group="page-group-quanlybaidang" id="page-quanlybaidang" data-aos="fade-up">
    <div class="card">
        <div class="card-body">
            <div class="btn-group btn-group-sm" role="group">
                <a class="btn btn-primary"><i class="bi bi-three-dots-vertical"></i></a>
                <div class="btn-group btn-group-sm dropdown">
                    <button type="button" title="Thao tác" class="btn btn-light-secondary dropdown-toggle dropdown-toggle-split"
                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                            data-reference="parent">
                        Thao tác
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item c-pointer"
                           onclick="quanLyBaiDang.baiDang.phanTichBinhLuan()">
                            <i class="bi bi-clipboard-data-fill"></i> Phân tích bài đăng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-4 flex-grow-1">
                    @Html.Partial("~/Views/Admin/QuanLyBaiDang/quanlybaidang-tab/baidang/xemchitiet/form-thongtinchung.cshtml", Model)
                </div>
                <div class="col-12 col-md-8" hidden>
                    @Html.Partial("~/Views/Admin/QuanLyBaiDang/quanlybaidang-tab/baidang/xemchitiet/form-phantichbaidang.cshtml", Model)
                </div>
            </div>
        </div>
    </div>
</section>