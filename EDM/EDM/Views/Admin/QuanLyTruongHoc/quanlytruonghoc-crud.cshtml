@using EDM_DB
@using Public.Enums
@using Public.Helpers
@model Applications.QuanLyNhaCungCap.Dtos.DisplayModal_CRUD_NhaCungCap_Output_Dto
@{
    var nhaCungCap = Model.NhaCungCap.NhaCungCap;
    List<string> loaiThaoTac_Disabled = new List<string> { "read" };
}
<div class="modal-dialog modal-dialog-scrollable modal-full" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title col-md-6 col-sm-12 my-2">
                @(Model.Loai == "create" ? "Thêm mới" : Model.Loai  == "update" ? "Cập nhật" : "Xem chi tiết")
            </h5>
            <div class="list-group list-group-horizontal mb-1 text-center col-md-6 col-sm-12 justify-content-sm-end justify-content-center" id="" role="tablist">
                <a class="list-group-item list-group-item-action active" id="thongtin-list"
                   data-bs-toggle="list" href="#thongtin" role="tab">Thông tin chung</a>
            </div>
        </div>
        <div class="modal-body">
            <div class="tab-content text-justify">
                <div class="tab-pane fade show active" id="thongtin" role="tabpanel"
                     aria-labelledby="thongtin-list">
                    <div class="row">
                        <div class="col-sm-12 col-md-4">
                            <div class="row" intro-container="thongtin-chung">
                                <!--Id-->
                                <input id="input-idnhacungcap" value="@nhaCungCap.IdNhaCungCap" hidden />

                                <!--Mã nhà cung cấp-->
                                <div class="col-12 col-sm-12 col-md-6">
                                    <div class="position-relative">
                                        <div class="form-group mb-3">
                                            <label class="required" for="input-manhacungcap">Mã nhà cung cấp</label>
                                            <input type="text"
                                                   class="form-control" id="input-manhacungcap"
                                                   placeholder="Nhập thông tin ..."
                                                   value="@(nhaCungCap.MaNhaCungCap ?? "")"
                                                   @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "") required>
                                            <div class="invalid-feedback feedback" for="input-manhacungcap">Không được để trống</div>
                                        </div>
                                    </div>
                                </div>

                                <!--Tên nhà cung cấp-->
                                <div class="col-12 col-sm-12 col-md-6">
                                    <div class="position-relative">
                                        <div class="form-group mb-3">
                                            <label class="required" for="input-tennhacungcap">Tên nhà cung cấp</label>
                                            <input type="text"
                                                   class="form-control" id="input-tennhacungcap"
                                                   placeholder="Nhập thông tin ..."
                                                   value="@(nhaCungCap.TenNhaCungCap ?? "")"
                                                   @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "") required>
                                            <div class="invalid-feedback feedback" for="input-tennhacungcap">Không được để trống</div>
                                        </div>
                                    </div>
                                </div>

                                <!--Tên mặt hàng-->
                                <div class="col-12 col-sm-12 col-md-6">
                                    <div class="position-relative">
                                        <div class="form-group mb-3">
                                            <label class="required" for="input-tenmathang">Tên mặt hàng</label>
                                            <input type="text"
                                                   class="form-control" id="input-tenmathang"
                                                   placeholder="Nhập thông tin ..."
                                                   value="@(nhaCungCap.TenMatHang ?? "")"
                                                   @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "") required>
                                            <div class="invalid-feedback feedback" for="input-tenmathang">Không được để trống</div>
                                        </div>
                                    </div>
                                </div>

                                <!--Số điện thoại-->
                                <div class="col-sm-12 col-md-6">
                                    <div class="position-relative">
                                        <div class="form-group mb-3">
                                            <label class="required" for="input-sodienthoai">Số điện thoại</label>
                                            <input type="tel"
                                                   class="form-control" id="input-sodienthoai"
                                                   placeholder="Nhập thông tin ..."
                                                   value="@(nhaCungCap.SoDienThoai ?? "")"
                                                   @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "") required>
                                            <div class="invalid-feedback feedback" for="input-sodienthoai">Không được để trống</div>
                                        </div>
                                    </div>
                                </div>

                                <!--Email-->
                                <div class="col-sm-12 col-md-6">
                                    <div class="position-relative">
                                        <div class="form-group mb-3">
                                            <label class="" for="input-email">Email</label>
                                            <input type="email"
                                                   class="form-control" id="input-email"
                                                   placeholder="Nhập thông tin ..."
                                                   value="@(nhaCungCap.Email ?? "")"
                                                   @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "")>
                                            <div class="invalid-feedback feedback" for="input-email">Không được để trống</div>
                                        </div>
                                    </div>
                                </div>

                                <!--Địa chỉ-->
                                <div class="col-sm-12 col-md-6">
                                    <div class="position-relative">
                                        <div class="form-group mb-3">
                                            <label class="" for="input-diachi">Địa chỉ</label>
                                            <input type="text"
                                                   class="form-control" id="input-diachi"
                                                   placeholder="Nhập thông tin ..."
                                                   value="@(nhaCungCap.DiaChi ?? "")"
                                                   @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "")>
                                            <div class="invalid-feedback feedback" for="input-diachi">Không được để trống</div>
                                        </div>
                                    </div>
                                </div>

                                <!--Trường học-->
                                <div class="col-12 col-sm-12 col-md-12">
                                    <div class="position-relative">
                                        <div class="form-group mb-3">
                                            <label class="" for="select-truonghoc">Trường học</label>
                                            <select class="form-control form-select2" id="select-truonghoc" name="select-truonghoc"
                                                    @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "")
                                                    multiple>
                                                <option disabled @(Model.TruongHocs.Count > 0 ? "" : "selected")>Chọn thông tin</option>
                                                @foreach (var truongHoc in Model.TruongHocs)
                                                {
                                                    var selected = Model.NhaCungCap.TruongHocs.Any(x => x.IdTruongHoc == truongHoc.IdTruongHoc);
                                                    <option value="@truongHoc.IdTruongHoc" @(selected ? "selected" : "")>
                                                        @truongHoc.TenTruongHoc
                                                    </option>
                                                }
                                            </select>
                                            <div class="invalid-feedback feedback" for="select-truonghoc">Không được để trống</div>
                                        </div>
                                    </div>
                                </div>

                                <!--Ghi chú-->
                                <div class="col-12 col-sm-12 col-md-12">
                                    <div class="position-relative">
                                        <div class="form-group mb-3">
                                            <label for="input-ghichu">Ghi chú</label>
                                            <textarea class="form-control min-h-50 max-h-100" id="input-ghichu" rows="2"
                                                      placeholder="Nhập thông tin ..."
                                                      value="@(nhaCungCap.GhiChu ?? "")"
                                                      @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "")>@(nhaCungCap.GhiChu ?? "")</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-8">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-hover table-bordered w-100 nowrap" id="table-tailieu" data-page-length="2">
                                        <thead>
                                            <tr>
                                                <th class="text-center">Tên tài liệu</th>
                                                <th class="text-center">Thời hạn bảo quản</th>
                                                <th class="text-center">Ngày kết thúc</th>

                                                <th class="text-center w-5" data-orderable="false">
                                                    <a class="btn btn-light-secondary c-pointer"
                                                       @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "")
                                                       onclick="quanLyLopHoc.lopHoc.taiLieu.create()"><i class="bi bi-plus-square"></i></a>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tfoot class="show-footer-above">
                                            <tr>
                                                <th><input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." /></th>
                                                <th><input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." /></th>
                                                <th><input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." /></th>

                                                <th><input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." disabled /></th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            @if (Model.NhaCungCap.TaiLieus.Count == 0)
                                            {
                                                var trangThaiBaoQuans = Enum.GetValues(typeof(TrangThaiBaoQuanEnum))
                                                .Cast<TrangThaiBaoQuanEnum>()
                                                .Select(e => new SelectListItem
                                                {
                                                    Value = ((int)e).ToString(),
                                                    Text = Public.Helpers.EnumHelper.GetDisplayName(e),
                                                    Selected = false
                                                })
                                                .ToList();

                                                <tr class="tr-tailieu"
                                                    data-idtailieu="@Guid.Empty"
                                                    data-thoihan=""
                                                    data-tentailieu="">
                                                    <td>
                                                        <input type="text" class="form-control input-tentailieu"
                                                               @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "")
                                                               placeholder="Tên tài liệu" />
                                                    </td>
                                                    <td>
                                                        <select class="form-control" id="select-trangthaibaoquan" name="select-trangthaibaoquan"
                                                                @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "") required>
                                                            <option disabled @(trangThaiBaoQuans.Count > 0 ? "" : "selected")>Chọn thông tin</option>
                                                            @foreach (var data in trangThaiBaoQuans)
                                                            {
                                                                <option value="@data.Value" @(data.Selected ? "selected" : "")>
                                                                    @data.Text
                                                                </option>
                                                            }
                                                        </select>
                                                    </td>
                                                    <td>
                                                        <input type="text" class="form-control input-ngayketthuc"
                                                               @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "")
                                                               placeholder="Ngày kết thúc" />
                                                        @*<input type="checkbox" class="form-check-input" id="checkbox-thoihanbaoquan" style="position: absolute; z-index: 1; right: .6rem; top: 2rem;" @(hoSo.ThoiHanBaoQuan == "Vĩnh viễn" ? "checked" : "") onchange="df.chonThoiHanBaoQuan(this, $('#input-thoihanbaoquan'))" @(Model.Loai == "read" ? "disabled" : "") />*@
                                                    </td>

                                                    <td class="text-center">
                                                        <a class="btn btn-light-secondary c-pointer"
                                                           @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "")
                                                           onclick="quanLyLopHoc.lopHoc.taiLieu.delete(this)">
                                                            <i class="bi bi-trash3-fill"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                            else
                                            {

                                                foreach (var taiLieu in Model.NhaCungCap.TaiLieus)
                                                {
                                                    var trangThaiBaoQuans = Enum.GetValues(typeof(TrangThaiBaoQuanEnum))
                                                    .Cast<TrangThaiBaoQuanEnum>()
                                                    .Select(e => new SelectListItem
                                                    {
                                                        Value = ((int)e).ToString(),
                                                        Text = Public.Helpers.EnumHelper.GetDisplayName(e),
                                                        Selected = taiLieu.TrangThaiBaoQuan != null
                                                    && (int)taiLieu.TrangThaiBaoQuan == (int)e
                                                    })
                                                    .ToList();
                                                    <tr class="tr-tailieu"
                                                        data-idtailieu="@taiLieu.IdFile"
                                                        data-thoihan="@taiLieu.NgayHetHan"
                                                        data-tentailieu="@taiLieu.FileName">
                                                        <td>
                                                            <input type="text" class="form-control input-tentailieu" value="@taiLieu.FileName"
                                                                   @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "")
                                                                   placeholder="Tên tài liệu" />
                                                        </td>
                                                        <td>
                                                            <select class="form-control" id="select-trangthaibaoquan" name="select-trangthaibaoquan"
                                                                    @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "") required>
                                                                <option disabled @(trangThaiBaoQuans.Count > 0 ? "" : "selected")>Chọn thông tin</option>
                                                                @foreach (var data in trangThaiBaoQuans)
                                                                {
                                                                    <option value="@data.Value" @(data.Selected ? "selected" : "")>
                                                                        @data.Text
                                                                    </option>
                                                                }
                                                            </select>
                                                        </td>
                                                        <td>
                                                        <td class="text-center">
                                                            <input type="datetime-local" min="" class="form-control input-ngayketthuc" placeholder="Nhập thông tin ..."
                                                                   name="input-ngayketthuc"
                                                                   value="" required>
                                                        </td>
                                                        </td>
                                                        <td class="text-center">
                                                            <a href="#" class="btn btn-sm btn-danger" title="Xóa bỏ"
                                                               @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "")
                                                               onclick="quanLyLopHoc.lopHoc.taiLieu.delete(this)"><i class="bi bi-trash3-fill"></i></a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary ml-1" onclick="quanLyNhaCungCap.nhaCungCap.save('@Model.Loai')">
                <span class="">Lưu</span>
            </button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <span class="">Đóng</span>
            </button>
        </div>
    </div>
</div>