@using Applications.SocialApi.Dtos
@model Applications.SocialApi.Dtos.SocialPageDto

@if (Model == null)
{
    <div class="col-12">
        <p class="text-danger fst-italic">Không có dữ liệu</p>
    </div>
}
else
{
    <div class="col-12">
        <table class="table table-hover table-bordered">
            <tbody>
                <tr style="background-color: var(--bs-table-hover-bg);">
                    <td colspan="2" class="text-center text-danger font-bold">Page</td>
                </tr>
                <tr hidden>
                    <td class="text-center font-bold">Id</td>
                    <td class="text-center font-bold">Name</td>
                </tr>
                <tr>
                    <td>@Model.Id</td>
                    <td>
                        <a class="c-pointer" href="@Model.Link"
                           target="_blank" rel="noopener noreferrer">
                            <i class="bi bi-link-45deg"></i> @Model.Name
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}
