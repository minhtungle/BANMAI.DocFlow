@using EDM_DB
@using Applications.QuanLyTaiKhoan.Enums
@using Public.Helpers
@model Applications.QuanLyTaiKhoan.Dtos.GetList_TaiKhoan_Output_Dto

@{
    string tableName = "taikhoan";
    var columns = new[] {
        "Access Token", "Tên", "Loại", "Nền tảng"
    };
}

<div class="mb-2 toggle-vis-bar">
    Hiển thị:
    @Public.Helpers.HtmlHelper.RenderToggleLinks($"{tableName}-getList", columns)
</div>
<table class="table table-hover table-bordered table-sticky w-100" id="@tableName-getList" data-page-length="10">
    <thead class="nowrap" style="white-space: nowrap !important">
        <tr>
            <th class="text-center" data-orderable="false"></th>

            @foreach (var c in columns)
            {
                <th class="text-center">@c</th>
            }

            <th class="text-center w-5" intro-container="dulieu-tacvu" data-orderable="false">
                <div style="white-space: nowrap">
                    <div class="btn-group btn-group-sm dropstart">
                        <button type="button" title="Thêm mới" class="btn btn-light-secondary dropdown-toggle dropdown-toggle-split"
                                data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                                data-reference="parent">
                            <i class="bi bi-gear-fill"></i>
                        </button>
                        <div class="dropdown-menu me-2" style="border: 1px solid black;">
                            @{
                                bool themMoi = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlytaikhoan-themmoi");
                                bool capNhat_Multiple = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlytaikhoan-capnhat");
                                bool xoaBo_Multiple = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlytaikhoan-xoabo");
                                if (themMoi)
                                {
                                    <a class="dropdown-item c-pointer"
                                       onclick="quanLyTaiKhoan.taiKhoan.displayModal_CRUD('create')">
                                        <i class="bi bi-plus-circle-fill"></i> Thêm mới
                                    </a>
                                }
                                if (capNhat_Multiple)
                                {
                                    <a class="dropdown-item c-pointer"
                                       onclick="quanLyTaiKhoan.taiKhoan.displayModal_CRUD('update')">
                                        <i class="bi bi-pencil-square"></i> Cập nhật
                                    </a>
                                }
                                if (xoaBo_Multiple)
                                {
                                    <a class="dropdown-item c-pointer"
                                       onclick="quanLyTaiKhoan.taiKhoan.delete('multiple')">
                                        <i class="bi bi-trash3-fill"></i> Xóa bỏ
                                    </a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </th>
        </tr>
    </thead>
    <tfoot class="show-footer-above">
        <tr>
            <th class="text-center"><input class="form-check-input checkAll-@tableName-getList" type="checkbox" title="Chọn tất cả" /></th>

            @foreach (var c in columns)
            {
                <th><input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." /></th>
            }

            <th><input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." disabled /></th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var taiKhoan in Model.TaiKhoans)
        {
            var isUser = taiKhoan.TaiKhoan.LoaiTaiKhoan.ToLower() == "user";
            var idToShow = isUser ? taiKhoan.TaiKhoan.User_Id : taiKhoan.TaiKhoan.Page_Id;

            <tr id="@taiKhoan.TaiKhoan.IdTaiKhoan">
                <td class="text-center"><input class="form-check-input checkRow-@tableName-getList" type="checkbox" /></td>

                <td class="text-left c-pointer"
                    onclick="sys.copyTextFromElement(this)"
                    title="Click để sao chép"
                    data-copy="@idToShow">
                    <a href="#">
                        <i class="bi bi-copy"></i>
                        @Public.Handle.TruncateString(maxLength: 10, input: idToShow)
                    </a>
                </td>
                <td class="text-left">
                    <a class="c-pointer" onclick="quanLyTaiKhoan.taiKhoan.displayModal_CRUD('update','@taiKhoan.TaiKhoan.IdTaiKhoan')">
                        @taiKhoan.TaiKhoan.Name
                    </a>
                </td>
                <td class="text-center">@taiKhoan.TaiKhoan.LoaiTaiKhoan.ToLower()</td>
                <td class="text-center">@taiKhoan.NenTang.TenNenTang</td>

                <td class="text-center">
                    <div style="white-space: nowrap">
                        <div class="btn-group btn-group-sm dropstart">
                            <button type="button" title="Thêm mới" class="btn btn-light-secondary dropdown-toggle dropdown-toggle-split"
                                    data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                                    data-reference="parent">
                                <i class="bi bi-gear-fill"></i>
                            </button>
                            <div class="dropdown-menu me-2" style="border: 1px solid black;">
                                @{
                                    bool capNhat = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlytaikhoan-capnhat");
                                    bool xoaBo = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlytaikhoan-xoabo");
                                    if (capNhat_Multiple)
                                    {
                                        <a class="dropdown-item c-pointer"
                                           onclick="quanLyTaiKhoan.taiKhoan.displayModal_CRUD('update', '@taiKhoan.TaiKhoan.IdTaiKhoan')">
                                            <i class="bi bi-pencil-square"></i> Cập nhật
                                        </a>
                                    }
                                    if (xoaBo_Multiple)
                                    {
                                        <a class="dropdown-item c-pointer"
                                           onclick="quanLyTaiKhoan.taiKhoan.delete('single', '@taiKhoan.TaiKhoan.IdTaiKhoan')">
                                            <i class="bi bi-trash3-fill"></i> Xóa bỏ
                                        </a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>