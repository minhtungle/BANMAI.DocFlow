@using Public.Models
@model Applications.QuanLyAIBot.Dtos.Index_OutPut_Dto
@{
    ViewBag.Title = "Quản lý AI Bot";
    Layout = "~/Views/_Shared/Admin/admin.cshtml";
}
@section hTitle {}
@section hBreadcrumb {
    <li class="breadcrumb-item"><a href="~/Home/Index">Trang chủ</a></li>
    <li class="breadcrumb-item active" aria-current="page">Quản lý AI Bot</li>
}
@section styles {
    @*<link href="~/Content/Admin/QuanLyAIBot/quanlyaibot.css" rel="stylesheet" />*@
}
@section scripts {
    <script src="~/Content/Admin/QuanLyAIBot/quanlyaibot.js"></script>
    <script>
        var quanLyAIBot = new QuanLyAIBot();
        quanLyAIBot.init();
    </script>
}
<section class="section" page-group="page-group-quanlyaibot" id="page-quanlyaibot" data-aos="fade-up">
    <div class="card">
        <div class="card-body">
            <div class="btn-group btn-group-sm" role="group">
                <!--AI Bot-->
                <a class="btn btn-primary"><i class="bi bi-three-dots-vertical"></i></a>
                <div class="btn-group btn-group-sm dropdown">
                    <button type="button" title="Thêm mới" class="btn btn-light-secondary dropdown-toggle dropdown-toggle-split"
                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                            data-reference="parent">
                        AI Bot
                    </button>
                    <div class="dropdown-menu">
                        @{
                            bool aiBot_themMoi = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlyaibot-aibot-themmoi");
                            bool aiBot_capNhat_Multiple = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlyaibot-aibot-capnhat");
                            bool aiBot_test_Multiple = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlyaibot-aibot-test");
                            bool aiBot_xoaBo_Multiple = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlyaibot-aibot-xoabo");
                            if (aiBot_themMoi)
                            {
                                <a class="dropdown-item c-pointer"
                                   onclick="quanLyAIBot.aiBot.displayModal_CRUD('create')">
                                    <i class="bi bi-plus-circle-fill"></i> Thêm mới
                                </a>
                            }
                            if (aiBot_capNhat_Multiple)
                            {
                                <a class="dropdown-item c-pointer"
                                   onclick="quanLyAIBot.aiBot.displayModal_Test()">
                                    <i class="bi bi-tornado"></i> Dùng thử
                                </a>
                            }
                            if (aiBot_test_Multiple)
                            {
                                <a class="dropdown-item c-pointer"
                                   onclick="quanLyAIBot.aiBot.displayModal_CRUD('update')">
                                    <i class="bi bi-pencil-square"></i> Cập nhật
                                </a>
                            }
                            if (aiBot_xoaBo_Multiple)
                            {
                                <a class="dropdown-item c-pointer"
                                   onclick="quanLyAIBot.aiBot.delete('multiple')">
                                    <i class="bi bi-trash3-fill"></i> Xóa bỏ
                                </a>
                            }
                        }
                    </div>
                </div>
                <!--Loại AI Bot-->
                <a class="btn btn-primary"><i class="bi bi-three-dots-vertical"></i></a>
                <div class="btn-group btn-group-sm dropdown">
                    <button type="button" title="Thêm mới" class="btn btn-light-secondary dropdown-toggle dropdown-toggle-split"
                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                            data-reference="parent">
                        Loại AI Bot
                    </button>
                    <div class="dropdown-menu">
                        @{
                            bool loaiAIBot_themMoi = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlyaibot-loaiaibot-themmoi");
                            bool loaiAIBot_capNhat_Multiple = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlyaibot-loaiaibot-capnhat");
                            bool loaiAIBot_xoaBo_Multiple = Model.ThaoTacs.Exists(x => x.MaThaoTac == "quanlyaibot-loaiaibot-xoabo");
                            if (loaiAIBot_themMoi)
                            {
                                <a class="dropdown-item c-pointer"
                                   onclick="quanLyAIBot.loaiAiBot.displayModal_CRUD('create')">
                                    <i class="bi bi-plus-circle-fill"></i> Thêm mới
                                </a>
                            }
                            if (loaiAIBot_capNhat_Multiple)
                            {
                                <a class="dropdown-item c-pointer"
                                   onclick="quanLyAIBot.loaiAiBot.displayModal_CRUD('update')">
                                    <i class="bi bi-pencil-square"></i> Cập nhật
                                </a>
                            }
                            if (loaiAIBot_xoaBo_Multiple)
                            {
                                <a class="dropdown-item c-pointer"
                                   onclick="quanLyAIBot.loaiAiBot.delete('multiple')">
                                    <i class="bi bi-trash3-fill"></i> Xóa bỏ
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            @Html.Partial("~/Views/Admin/QuanLyAIBot/quanlyaibot-tab/tab.cshtml", Model)
        </div>
    </div>
</section>
<!--aibot-crud-->
<div class="modal fade text-left" id="aibot-crud" tabindex="-1" data-bs-keyboard="false" data-bs-backdrop="static" removeBody="true">
</div>
<!--aibot-crud-->
<div class="modal fade text-left" id="aibot-test" tabindex="-1" data-bs-keyboard="false" data-bs-backdrop="static" removeBody="true">
</div>
<!--loaiaibot-crud-->
<div class="modal fade text-left" id="loaiaibot-crud" tabindex="-1" data-bs-keyboard="false" data-bs-backdrop="static" removeBody="true">
</div>