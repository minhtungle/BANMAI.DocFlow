@using Applications.SocialApi.Dtos
@model Applications.SocialApi.Dtos.SocialUserWithPagesDto

@if (Model == null)
{
    <div class="col-12">
        <p class="text-danger fst-italic">Không có dữ liệu</p>
    </div>
}
else
{
    <div class="col-12">
        <table class="table table-hover table-bordered">
            <tbody>
                <tr style="background-color: var(--bs-table-hover-bg);">
                    <td colspan="2" class="text-center text-danger font-bold">User</td>
                </tr>
                <tr hidden>
                    <td class="text-center font-bold">Id</td>
                    <td class="text-center font-bold">Name</td>
                </tr>
                <tr>
                    <td>@Model.User.Id</td>
                    <td>
                        <a class="c-pointer" href="@Model.User.Link"
                           target="_blank" rel="noopener noreferrer">
                            <i class="bi bi-link-45deg"></i> @Model.User.Name
                        </a>
                    </td>
                </tr>
            </tbody>
            <tbody>
                <tr style="background-color: var(--bs-table-hover-bg);">
                    <td colspan="2" class="text-center text-danger font-bold">Page</td>
                </tr>
                <tr hidden>
                    <td class="text-center font-bold">Id</td>
                    <td class="text-center font-bold">Name</td>
                </tr>
                @foreach (var page in Model.Pages)
                {
                    <tr>
                        <td>@page.Id</td>
                        <td>
                            <a class="c-pointer" href="@page.Link"
                               target="_blank" rel="noopener noreferrer">
                                <i class="bi bi-link-45deg"></i> @page.Name
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
