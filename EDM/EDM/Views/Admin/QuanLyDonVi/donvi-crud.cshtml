@using EDM_DB
@using Public.Helpers
@model Applications.QuanLyDonVi.Dtos.DisplayModel_CRUD_DonVi_Output_Dto
@{
    var donVi = Model.DonVi;
    List<string> loaiThaoTac_Disabled = new List<string> { "read" };
}
<div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title col-md-6 col-sm-12 my-2">
                @(Model.Loai == "create" ? "Thêm mới" : Model.Loai  == "update" ? "Cập nhật" : "Xem chi tiết")
            </h5>
            <div class="list-group list-group-horizontal mb-1 text-center col-md-6 col-sm-12 justify-content-sm-end justify-content-center" id="" role="tablist">
                <a class="list-group-item list-group-item-action active" id="thongtin-list"
                   data-bs-toggle="list" href="#thongtin" role="tab">Thông tin Loại AI Tool</a>
            </div>
        </div>
        <div class="modal-body">
            <div class="tab-content text-justify">
                <div class="tab-pane fade show active" id="thongtin" role="tabpanel"
                     aria-labelledby="thongtin-list">
                    <div class="row" intro-container="thongtin-chung">
                        <!--Id-->
                        <input id="input-iddonvi" value="@donVi.MaDonViSuDung" hidden />
                        <!--Logo-->
                        <div class="col-12" id="logo-container">
                            <label class="form-label d-block">
                                Ảnh Logo
                            </label>

                            <div class="image-grid" id="logo-grid">
                                <!-- Ô thêm ảnh -->
                                <label class="image-item add-image-item" for="input-logo">
                                    <i class="bi bi-plus-circle-fill"></i>
                                </label>
                                <input type="file" id="input-logo" class="form-control"
                                       multiple accept=".png, .jpg, .jpeg"
                                       onchange="quanLyDonVi.donVi.handleImg.add()"
                                       hidden />

                                <!-- VÙNG ẢNH -->
                                <div id="logo-items" style="display: contents;">
                                    <div class="image-item">
                                        <img src="@donVi.Logo" id="demo-logo" />
                                        <button class="delete-btn"
                                                onclick="quanLyDonVi.donVi.handleImg.delete()">
                                            &times;
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Tên miền-->
                        <div class="col-12 col-sm-12 col-md-6">
                            <div class="position-relative">
                                <div class="form-group mb-3">
                                    <label class="" for="input-tenmien">Tên miền</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Nhập thông tin ..."
                                               id="input-tenmien" name="input-tenmien"
                                               value="@(donVi.TenMien ?? "")"
                                               @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "") required>
                                        <label type="text" class="form-control" id="input-tenmien" hidden></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Tên đơn vị-->
                        <div class="col-12 col-sm-12 col-md-6">
                            <div class="position-relative">
                                <div class="form-group mb-3">
                                    <label class="required" for="input-tendonvisudung">Tên đơn vị sử dụng</label>
                                    <input type="text" class="form-control" placeholder="Nhập thông tin ..."
                                           id="input-tendonvisudung" name="input-tendonvisudung"
                                           value="@(donVi.TenDonViSuDung ?? "")"
                                           @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "") required>
                                    <div class="invalid-feedback feedback" for="input-tendonvisudung">Không được để trống</div>
                                </div>
                            </div>
                        </div>
                        <!--Tiêu đề-->
                        <div class="col-12 col-sm-12 col-md-12">
                            <div class="position-relative">
                                <div class="form-group mb-3">
                                    <label class="" for="input-tieudetrangchu">Tiêu đề trang chủ</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Nhập thông tin ..."
                                               id="input-tieudetrangchu" name="input-tieudetrangchu"
                                               value="@(donVi.TieuDeTrangChu ?? "")"
                                               @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "") required>
                                        <label type="text" class="form-control" id="input-tieudetrangchu" hidden></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Sử dụng trang chủ-->
                        <div class="col-12 col-sm-12 col-md-6">
                            <div class="position-relative">
                                <div class="form-group mb-3">
                                    <label class="" for="select-sudungtrangnguoidung">Trang người dùng</label>
                                    <select class="form-control"
                                            id="select-sudungtrangnguoidung" name="select-sudungtrangnguoidung"
                                            @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "")>
                                        <option disabled>Chọn thông tin</option>
                                        <option value="1" @(donVi.SuDungTrangNguoiDung == true ? "selected" : "")>Kích hoạt</option>
                                        <option value="0" @(donVi.SuDungTrangNguoiDung == false ? "selected" : "")>Vô hiệu hóa</option>
                                    </select>
                                    <div class="invalid-feedback feedback" for="select-sudungtrangnguoidung">Không được để trống</div>
                                </div>
                            </div>
                        </div>
                        <!--Số điện thoại-->
                        <div class="col-12 col-sm-12 col-md-6">
                            <div class="position-relative">
                                <div class="form-group mb-3">
                                    <label class="required" for="input-sodienthoai">Số điện thoại</label>
                                    <input type="tel" class="form-control" placeholder="Nhập thông tin ..."
                                           id="input-sodienthoai" name="input-sodienthoai"
                                           value="@(donVi.SoDienThoai ?? "")"
                                           @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "") required>
                                    <div class="invalid-feedback feedback" for="input-sodienthoai">Không được để trống</div>
                                </div>
                            </div>
                        </div>
                        <!--Email-->
                        <div class="col-12 col-sm-12 col-md-6">
                            <div class="position-relative">
                                <div class="form-group mb-3">
                                    <label class="required" for="input-email">Email</label>
                                    <input type="email" class="form-control" placeholder="Nhập thông tin ..."
                                           id="input-email" name="input-email"
                                           value="@(donVi.Email ?? "")"
                                           @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "") required>
                                    <div class="invalid-feedback feedback" for="input-email">Không được để trống</div>
                                </div>
                            </div>
                        </div>
                        <!--Địa chỉ-->
                        <div class="col-12 col-sm-12 col-md-12">
                            <div class="position-relative">
                                <div class="form-group mb-3">
                                    <label class="" for="input-diachi">Địa chỉ</label>
                                    <input type="text" class="form-control"
                                           placeholder="Nhập thông tin ..." id="input-diachi"
                                           value="@(donVi.DiaChi ?? "")"
                                           @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "")>
                                </div>
                            </div>
                        </div>

                        <!--Ghi chú-->
                        <div class="col-12 col-sm-12 col-md-12">
                            <div class="position-relative">
                                <div class="form-group mb-3">
                                    <label for="input-ghichu">Ghi chú</label>
                                    <textarea class="form-control min-h-50 max-h-100" id="input-ghichu" rows="2"
                                              placeholder="Nhập thông tin ..."
                                              value="@(donVi.GhiChu ?? "")"
                                              @(loaiThaoTac_Disabled.Contains(Model.Loai) ? "disabled" : "")>@(donVi.GhiChu ?? "")</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary ml-1" onclick="quanLyDonVi.donVi.save('@Model.Loai')">
                <span class="">Lưu</span>
            </button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <span class="">Đóng</span>
            </button>
        </div>
    </div>
</div>